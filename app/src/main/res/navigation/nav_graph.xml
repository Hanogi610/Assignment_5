<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.assignment5.ui.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_songPlayerFragment"
            app:destination="@id/songPlayerFragment"
            app:enterAnim="@anim/slide_up"/>
        <action
            android:id="@+id/action_viewPagerFragment_to_songListFragment"
            app:destination="@id/songListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/songPlayerFragment"
        android:name="com.example.assignment5.ui.SongPlayerFragment"
        android:label="fragment_song_player"
        tools:layout="@layout/fragment_song_player" >
        <action
            android:id="@+id/action_songPlayerFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:exitAnim="@anim/slide_down"
            app:popExitAnim="@anim/slide_down"/>
    </fragment>
    <fragment
        android:id="@+id/songListFragment"
        android:name="com.example.assignment5.ui.SongListFragment"
        android:label="fragment_song_list"
        tools:layout="@layout/fragment_song_list" >
        <action
            android:id="@+id/action_songListFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_songListFragment_to_songPlayerFragment"
            app:destination="@id/songPlayerFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"/>
    </fragment>
</navigation>
